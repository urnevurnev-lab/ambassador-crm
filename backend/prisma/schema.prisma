generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AMBASSADOR
}

enum VisitType {
  TASTING
  TRAINING
  CHECKUP
}

// ... (User)
model User {
  id          Int      @id @default(autoincrement())
  telegramId  String   @unique
  fullName    String
  role        Role     @default(AMBASSADOR)
  xp          Int      @default(0)
  level       Int      @default(1)
  balance     Float    @default(0)
  
  // Profile Fields
  birthDate   DateTime?
  tshirtSize  String?
  cdekInfo    Json?    // { city: string, address: string, code?: string }

  visits      Visit[]
  orders      Order[]
  sampleOrders SampleOrder[]
  allowedDistributors Distributor[] @relation("UserDistributors")
  createdAt   DateTime @default(now())
}

// ...

model SampleOrder {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("PENDING")
  items     SampleOrderItem[]
  createdAt DateTime @default(now())
}

model SampleOrderItem {
  id            Int         @id @default(autoincrement())
  sampleOrderId Int
  sampleOrder   SampleOrder @relation(fields: [sampleOrderId], references: [id])
  productId     Int
  product       Product     @relation(fields: [productId], references: [id])
  quantity      Int
}

// Ensure Product has relation to SampleOrderItem
model Product {
  id        Int      @id @default(autoincrement())
  line      String
  flavor    String
  sku       String   @unique
  category  String   @default("UNKNOWN")
  createdAt DateTime @default(now())
  productsAvailableIn Visit[] @relation("VisitProducts")
  productsTastedIn    Visit[] @relation("VisitTasted")
  orderItems OrderItem[]
  sampleOrderItems SampleOrderItem[]
}

// Other models ...
model Facility {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  lat         Float?
  lng         Float?
  format      String?
  tier        String?
  mustList    Json?    
  requiredProducts Int[] @default([])
  visits      Visit[]
  orders      Order[]
}

model Visit {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  facilityId  Int
  facility    Facility @relation(fields: [facilityId], references: [id])
  activityId  Int?
  activity    Activity? @relation(fields: [activityId], references: [id])
  type        String   @default("UNKNOWN")
  date        DateTime @default(now())
  data        Json?
  productsAvailable Product[] @relation("VisitProducts")
  productsTasted    Product[] @relation("VisitTasted")
  isValidGeo  Boolean  @default(false)
  isSuspicious Boolean @default(false)
  comment     String?
  contactName String?
  endedAt     DateTime?
  status      String   @default("COMPLETED") // STARTED, COMPLETED
  createdAt   DateTime @default(now())
}

model Activity {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  name        String
  description String?
  visits      Visit[]
  createdAt   DateTime @default(now())
}

model Order {
  id            Int      @id @default(autoincrement())
  userId        Int?
  user          User?     @relation(fields: [userId], references: [id])
  facilityId    Int?
  facility      Facility? @relation(fields: [facilityId], references: [id])
  distributorId Int?
  distributor   Distributor? @relation(fields: [distributorId], references: [id])
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  processedBy   String?
  total         Float    @default(0)
  items         OrderItem[]
  createdAt     DateTime @default(now())
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id])
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
}

model Distributor {
  id             Int      @id @default(autoincrement())
  name           String
  telegramChatId String
  orders         Order[]
  users          User[]   @relation("UserDistributors")
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  imageUrl   String?
  importance Int      @default(0)
  createdAt  DateTime @default(now())
}
